{
	"name": "red-site",
	"version": "0.0.1",
	"author": "Grayscale Digital",
	"license": "Private, all rights reserved",
	"private": true,
	"scripts": {
		"clean": "shx rm -rf ../../public && shx rm -f static/styles/*.{css,map} && shx rm -f static/js/*.{js,map}",
		"predev": "yarn run clean",
		"dev": "cross-env NODE_ENV=development webpack --mode development --progress",
		"prewatch": "yarn run clean",
		"watch": "cross-env NODE_ENV=development webpack --mode development --watch",
		"start": "yarn run watch",
		"prebuild": "yarn run clean",
		"build": "cross-env NODE_ENV=production webpack --mode production",
		"fmt": "prettier --write \"src/**/*.{js,ts,scss,css}\"",
		"lint": "eslint \"src/js/**/*.{js,ts}\" && stylelint \"src/styles/**/*.css\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn run fmt && yarn run lint"
		}
	},
	"devDependencies": {
		"babel-core": "^6.26.3",
		"babel-loader": "^7.1.5",
		"babel-preset-env": "^1.7.0",
		"concurrently": "^3.5.1",
		"cross-env": "^5.1.6",
		"css-loader": "^0.28.11",
		"eslint": "^4.19.1",
		"eslint-config-standard": "^11.0.0",
		"eslint-plugin-import": "^2.12.0",
		"eslint-plugin-node": "^6.0.1",
		"eslint-plugin-prettier": "^2.6.0",
		"eslint-plugin-promise": "^3.8.0",
		"eslint-plugin-standard": "^3.0.1",
		"glob-all": "^3.1.0",
		"husky": "^1.0.0-rc.7",
		"lodash": "^4.17.21",
		"mini-css-extract-plugin": "^0.4.0",
		"postcss-import": "^11.1.0",
		"postcss-loader": "^2.1.5",
		"prettier": "^1.11.1",
		"purgecss-webpack-plugin": "^1.1.0",
		"sass-loader": "^7.0.1",
		"shx": "^0.2.2",
		"style-loader": "^0.21.0",
		"stylelint": "^9.2.1",
		"stylelint-config-standard": "^18.2.0",
		"tailwindcss": "^0.5.3",
		"webpack": "^4.9.0",
		"webpack-assets-manifest": "^3.0.1",
		"webpack-cli": "^2.1.4"
	},
	"dependencies": {
		"vue": "^2.5.16",
		"wretch": "^1.2.0"
	}
}
